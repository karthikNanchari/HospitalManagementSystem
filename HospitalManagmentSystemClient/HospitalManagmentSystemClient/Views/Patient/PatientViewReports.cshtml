<body>
   
    <div id="gridContent" style=" padding:20px; ">
        @grid.GetHtml(
     tableStyle: "webgrid-table",
     headerStyle: "webgrid-header",
     footerStyle: "webgrid-footer",
     alternatingRowStyle: "webgrid-alternating-row",
     selectedRowStyle: "webgrid-selected-row",
     rowStyle: "webgrid-row-style",
     mode: WebGridPagerModes.All,
     columns:
         grid.Columns(
         grid.Column("AppointmentID", format: @<text>  <span class="display-mode"> <label id="appointmentID" value="@item.appointment_ID">  @item.appointment_ID   </label></span> </text>, style: "col1Width"),
         grid.Column("PatientID", format: @<text>  <span class="display-mode"> <label id="patientID" value="@item.patient_ID">  @item.patient_ID   </label></span> </text>, style: "col1Width"),
         grid.Column("ReportID", format: @<text><span class="display-mode"> <label id="lblreportID">  @item.report_ID   </label>  </span>  </text>, style: "col1Width"),
         grid.Column("LabResult", format: @<text><span class="display-mode"> <label id="lblLabResult"> @item.labResult  </label></span> </text>, style: "col3Width"),
         grid.Column("Report Time", format: @<text><span class="display-mode">@((item.reportTime))</span> </text>, style: "col1Width"),
         grid.Column("Report Date", format: @<text><span class="display-mode">@((item.date).ToString("MM-dd-yyyy"))</span> </text>, style: "col1Width")
     ))
    </div>

    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
</body>

</html>



