@model Models.TreatmentRoomModel
@{
    ViewBag.Title = "View Room Alloted";
}

<!Doctype Html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
    <link href="~/Scripts/tableStyle.css" rel="stylesheet" />
</head>
<body>
    @if (Model != null)
    {
        <h3 style="text-align:center"> Booked Room Details </h3>
        <table id="detailsTable">
            <thead>
                <tr>
                    <th>Room ID</th>
                    <th>Booked For Date</th>
                    <th>Booked timing </th>
                </tr>
            </thead>
            <tr style="text-align:center">
                <td>
                    @Model.room_ID
                </td>
                <td>
                    @((Model.date).ToString("MM-dd-yyyy"))
                </td>
                <td>
                    @Model.timings
                </td>
            </tr>
        </table>
        <br />
        <br />
    }
    else
    {
        <br />
        <h3 style="text-align:center"> No rooms are alloted</h3>
    }
</body>
</html>
