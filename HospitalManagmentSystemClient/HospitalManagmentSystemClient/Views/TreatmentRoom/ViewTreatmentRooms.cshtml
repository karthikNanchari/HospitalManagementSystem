@model IEnumerable<Models.TreatmentRoomModel>
@{
    ViewBag.Title = "ViewTreatmentRooms";
}

<h2>View Treatment Rooms</h2>

<table border="1">
    <tr colspan="2" style="height:10%">
        <td>
            <div>
                <table id="detailsTable">
                    <thead>
                        <tr>
                            <th>Appointment Number:</th>
                            <th>Patient Name </th>
                            <th>Appointment Date</th>
                            <th>Appointment Time</th>
                        </tr>
                    </thead>
                    @foreach (var apmnt in Model)
                    {
                        <tr style="text-align:center">
                            <td>
                                @apmnt.room_ID
                            </td>
                            <td>
                                @apmnt.patient_ID
                            </td>
                            <td>
                                @apmnt.date
                            </td>
                            <td>
                                @apmnt.timings
                            </td>
                            <td>
                                @apmnt.isBooked
                            </td>
                            <td>
                                <input type="submit" value="Edit @apmnt.room_ID" name="Update Room" />
                                <input type="hidden" id="rowId" name="rowId" />
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>
